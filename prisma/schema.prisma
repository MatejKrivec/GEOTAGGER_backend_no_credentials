generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model USER{
  id            Int @default(autoincrement()) @id
  username      String @unique
  email         String @unique
  password      String?
  profilePic    String?
  points        Int @default(10)
}

model PasswordResetToken {
  id          Int      @default(autoincrement()) @id
  token       String   
  userId      Int      
  expiryTime  DateTime
}

model Location {
  id         Int     @default(autoincrement()) @id
  userID     Int
  name       String
  location   String
  photo      String
  date  DateTime
}

model Guess {
  id              Int     @default(autoincrement()) @id
  UserID          Int
  LocationID      Int
  guessedLocation String
  distance        Float
  date  DateTime
}
